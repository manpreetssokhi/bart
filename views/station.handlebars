<div class="container" style="position:relative; left:5px; right:5px;">
    <div>
        <h1 style="text-align:center">Station Details</h1>
        <form method="get">
            <div class="input-group">
                <select class="form-control" name="stn" onchange='this.form.submit()'>
                    <option>Choose a station</option>
                    {{#each stations}}
                    <option value={{ this.abbr }}>{{ this.name }}</option>
                    {{/each}}
                </select>
            </div>
        </form>
    </div>
    <div>
        {{#if access}}
        <aside>
            <h1>{{ access.name }}, {{ access.abbr }}</h1>
            <h3>Entering details:</h3>
            <p>{{{ access.entering.text }}}</p>
            <h3>Exiting details:</h3>
            <p>{{{ access.exiting.text }}}</p>
            <h3>Parking details:</h3>
            <p>{{{ access.parking.text }}}</p>
            <h3>Transit Info details:</h3>
            <p>{{ access.transit_info }}</p>
            <h3>Locker details:</h3>
            <p>{{{ access.lockers.text }}}</p>
        </aside>
        {{/if}}
    </div>
</div>